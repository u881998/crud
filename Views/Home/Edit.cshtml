@model crud_operation.Models.Employee

<h1>Edit Employee</h1>

<form asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Designation">Designation</label>
        <input asp-for="Designation" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Department">Department</label>
        <input asp-for="Department" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Salary">Salary</label>
        <input asp-for="Salary" class="form-control" />
    </div>

    <!-- File upload field (only show if there is an existing file) -->
    <div class="form-group">
        <label for="Resume">Resume</label>
        <input type="file" class="form-control" name="resumeFile" />
        @if (!string.IsNullOrEmpty(Model.ResumePath))
        {
            <div>
                <p>Current file: <a href="@Url.Content("~/" + Model.ResumePath)">Download</a></p>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
