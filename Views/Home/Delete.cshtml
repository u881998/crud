@model crud_operation.Models.Employee

<h2>Are you sure you want to delete this employee?</h2>
<p>Name: @Model.Name</p>
<p>Position: @Model.Designation</p>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <button type="submit">Yes, Delete</button>
    <a href="@Url.Action("Index")">No, Cancel</a>
</form>
